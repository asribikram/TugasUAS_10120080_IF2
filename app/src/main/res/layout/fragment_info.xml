<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InfoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Informasi MemoVerse"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MemoVerse adalah sebuah aplikasi pencatatan yang inovatif dan intuitif yang dirancang untuk membantu pengguna menyimpan, mengelola, dan mengatur berbagai jenis informasi dan ide. Dengan antarmuka yang bersih dan mudah digunakan, MemoVerse memungkinkan pengguna untuk dengan mudah mencatat ide, to-do list, catatan penting, dan banyak lagi, sehingga membantu mereka tetap terorganisir dan produktif dalam berbagai aspek kehidupan."
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
